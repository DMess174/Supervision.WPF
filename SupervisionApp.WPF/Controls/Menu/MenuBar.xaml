<UserControl
    x:Class="SupervisionApp.WPF.Controls.Menu.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SupervisionApp.WPF.ViewModels.Factories"
    d:DesignHeight="50"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border BorderBrush="{StaticResource WordBlueBrush}" BorderThickness="0,1,0,1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Menu
                Grid.Row="0"
                FontFamily="{StaticResource FranklinGothicBookRegular}"
                FontSize="{StaticResource FontSizeLarge}"
                Style="{StaticResource Horizont}">
                <MenuItem Header="Файл">
                    <MenuItem Header="Выход" />
                </MenuItem>
                <MenuItem Header="_Редактирование">
                    <MenuItem Command="Cut" Header="_Вырезать">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ContentCut" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="Copy" Header="_Копировать">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ContentCopy" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="Paste" Header="_Вставить">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ContentPaste" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Справочники">
                    <MenuItem Header="Контрагент">
                        <MenuItem 
                            Command="{Binding OpenTabCommand}"
                            Header="Договоры" />
                        <MenuItem 
                            Command="{Binding OpenTabCommand}"
                            Header="Заказчики"/>
                    </MenuItem>
                    <MenuItem Header="НТД" />
                </MenuItem>
                <MenuItem
                    Command="{Binding OpenTabCommand}"
                    CommandParameter="{x:Static vm:TabItemViewType.SpecificationList}"
                    Header="Заказы" />
                <MenuItem
                    Command="{Binding OpenTabCommand}"
                    CommandParameter="{x:Static vm:TabItemViewType.EmployeeList}"
                    Header="Персонал">
                    <MenuItem.Style>
                        <Style BasedOn="{StaticResource MaterialDesignMenuItem}" TargetType="{x:Type MenuItem}">
                            <Setter Property="MenuItem.Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.CurrentRole}" Value="1">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.CurrentRole}" Value="2">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type UserControl}}, Path=DataContext.CurrentRole}" Value="4">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem Header="Продукция" ItemsSource="{Binding ProductTypes}">
                    <MenuItem.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Width="auto"
                                MaxWidth="200"
                                Orientation="Horizontal">
                                <TextBlock Text="{Binding ShortName}" TextWrapping="Wrap">
                                    <TextBlock.InputBindings>
                                        <MouseBinding
                                            Command="{Binding RelativeSource={RelativeSource FindAncestor, 
                                            AncestorType={x:Type UserControl}}, Path=DataContext.OpenTabCommand}"
                                            CommandParameter="{x:Static vm:TabItemViewType.EmployeeList}"
                                            MouseAction="LeftClick" />
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>
            </Menu>
        </Grid>
    </Border>
</UserControl>
